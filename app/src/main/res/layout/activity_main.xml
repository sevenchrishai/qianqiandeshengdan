<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/black_star_sky"
        tools:context=".MainActivity">

    <com.hqbb.qianqiandeshengdan.view.SnowView
            android:id="@+id/snowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
    >

        <TextView
                android:id="@+id/wishText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="少女啊，快向我许个愿吧"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/hanyi"
        />

        <android.support.constraint.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/christmas_tree">

            <ImageView
                    android:id="@+id/gift"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/gift"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="40dp"
                    android:onClick="onClick"
            />

            <ImageView
                    android:id="@+id/letter"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/letter"
                    app:layout_constraintTop_toBottomOf="@id/pie_man"
                    app:layout_constraintLeft_toRightOf="@id/pie_man"
                    app:layout_constraintBottom_toTopOf="@+id/gift"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/candy_cane"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/candy_cane"
                    app:layout_constraintTop_toBottomOf="@id/cake"
                    app:layout_constraintLeft_toRightOf="@id/snow_man"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/tree"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tree"
                    app:layout_constraintRight_toLeftOf="@id/glove"
                    app:layout_constraintTop_toBottomOf="@id/glove"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/bell"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bell"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/hat"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/snow_man"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/snow_man"
                    app:layout_constraintTop_toBottomOf="@id/tree"
                    app:layout_constraintLeft_toRightOf="@id/tree"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/cake"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cake"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gift"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/ring"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ring"
                    app:layout_constraintRight_toLeftOf="@id/cake"
                    app:layout_constraintTop_toBottomOf="@id/letter"
                    android:layout_marginRight="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/sock"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sock"
                    app:layout_constraintTop_toBottomOf="@id/gift"
                    app:layout_constraintLeft_toRightOf="@id/gift"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/deer"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/deer"
                    app:layout_constraintTop_toBottomOf="@id/candy"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/hat"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/wine"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bell"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/glove"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/glove"
                    app:layout_constraintRight_toLeftOf="@id/letter"
                    app:layout_constraintTop_toBottomOf="@id/pie_man"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/candy"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/candy"
                    app:layout_constraintTop_toBottomOf="@id/sock"
                    app:layout_constraintLeft_toRightOf="@id/cake"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/snowflake"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/snowflake"
                    app:layout_constraintTop_toBottomOf="@id/flower"
                    app:layout_constraintLeft_toRightOf="@id/wine"
                    android:layout_marginLeft="20dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/pie_man"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pie_man"
                    app:layout_constraintTop_toBottomOf="@id/wine"
                    app:layout_constraintRight_toLeftOf="@id/gift"
                    android:layout_marginRight="40dp"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/flower"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/flower"
                    app:layout_constraintStart_toEndOf="@id/bell"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/hat"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/sled"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/sled"
                    app:layout_constraintTop_toBottomOf="@id/candy"
                    app:layout_constraintRight_toLeftOf="@id/deer"
                    android:onClick="onClick"
            />
            <ImageView
                    android:id="@+id/chrismasman"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/chrismasman"
                    app:layout_constraintRight_toLeftOf="@id/deer"
                    app:layout_constraintTop_toBottomOf="@id/candy"
                    android:onClick="onClick"
            />

            <Button
                    android:id="@+id/wish"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="开始许愿"
                    android:fontFamily="@font/hanyi"
                    android:textSize="22sp"
                    android:background="@drawable/circle_corner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="onClick"
            />


        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>